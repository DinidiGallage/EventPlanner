<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>clientControl.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	 <servlet>
    	<servlet-name>clientInsert</servlet-name>
    	<servlet-class>clientControl.ClientInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>clientInsert</servlet-name>
    	<url-pattern>/insert</url-pattern>
    </servlet-mapping>
    
	<servlet>
		<servlet-name>updateClient</servlet-name>
		<servlet-class>clientControl.UpdateClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateClient</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>    
	
		<servlet>
		<servlet-name>deleteClient</servlet-name>
		<servlet-class>clientControl.DeleteClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteClient</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	
</web-app>
